<div class="row">
	<div class="col-md-4 col-md-offset-4 signup-page">
		<h1><strong>Sign Up</strong></h1>
		{{#if hasErrors}}
		<div class="alert alert-danger">
			{{# each messages}}
				<p>{{ this }}</p>
			{{/each}}
		</div>
		{{/if}}
		<form action="/user/signup" method="post" style="margin:20px;">
			<div class="form-group" style="display: flex; flex-direction: row; justify-content: center; align-items: center; border-bottom: 1px solid #ccc; font-size: 16px;">
				<label for="email"><i class="fa fa-envelope" aria-hidden="true"></i></label>
				<input type="text" name="email" id="email" class="form-control" placeholder="Your Email">
			</div>
			<div class="form-group" style="display: flex; flex-direction: row; justify-content: center; align-items: center; border-bottom: 1px solid #ccc; font-size: 16px;">
				<label for="password"><i class="fa fa-lock" aria-hidden="true"></i></label>
				<input type="password" name="password" id="password" class="form-control" placeholder="Your Password">
			</div>
			<input type="hidden" name="_csrf" value="{{ csrfToken }}">
			<button type="submit" class="buttons" style="margin-top: 10px;">SignUp</button>
		</form>
		<p>Already a Member? <a href="/user/signin" style="text-decoration: none;">Sign In Instead!</a></p>
	</div>
</div>