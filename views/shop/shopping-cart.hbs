{{# if products }}
<div class="row">
	<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
		<ul class="list-group">
			{{# each products}}
				<li class="list-group-item" style="display: flex; justify-content: space-around; align-items: center;">
					<strong>{{ this.item.title }}</strong>
					<span class="badge">{{ this.qty }}</span>
					<span class="label label-success" style="font-size: 18px;">${{ this.price }}</span>
					<div class="btn-group">
						<button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown" style="font-size: 15px;">Action <span class="caret"></span></button>
						<ul class="dropdown-menu">
						<li><a href="/reduce/{{ this.item._id}}">Reduce by 1</a></li>
						<li><a href="/remove/{{ this.item._id}}">Remove All</a></li>
						</ul>
					</div>
				</li>
			{{/each}}
		</ul>
	</div>
</div>
<div class="row">
	<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
		<h4><strong>Total: ${{ totalPrice }}</strong></h4>
	</div>
</div>
<hr>
<div class="row">
	<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
		<a href="/checkout" type="button" class="button">Checkout</a>
	</div>
</div>
{{ else }}
<div class="row">
	<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
		<h2>No items in the Cart</h2>
	</div>
</div>
{{/if}}
