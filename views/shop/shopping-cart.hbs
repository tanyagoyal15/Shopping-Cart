{{# if products }}
<div class="row">
	<h3 class="shopping-cart col-12 text-center">Shopping Cart</h3>
	<div class="col-sm-6 col-md-12">
		<ul class="list">
			{{# each products}}
			<li class="list-item"
				style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
				{{!-- <img src="{{ this.item.imagePath }}" class="img-responsive" style="width: 70px; height: 120px;"> --}}
				<strong style="text-transform: uppercase; width: 30%">{{ this.item.title }}</strong>
				<span class="qty">
					<i class="fa fa-plus fa-1x"></i>
					{{!-- <a href="/add/{{ this.item._id}}"><i class="fa fa-plus fa-1x"></i></a> --}}
					<b>{{this.qty}}</b>
					<a href="/reduce/{{ this.item._id}}"><i class="fa fa-minus fa-1x"></i></a>
				</span>
				<span class="price">Rs {{ this.price }}</span>
				<a href="/remove/{{ this.item._id}}" style="text-decoration: none;"><i
						class="fa fa-remove fa-2x"></i></a>
			</li>
			<hr>
			{{/each}}
		</ul>
	</div>
</div>
<div class="row">
	<div class="col-sm-6 col-md-6">
		<h4 style="margin: 0 0 30px 40px;"><strong>Total: Rs {{ totalPrice }}</strong></h4>
	</div>
</div>
<div class="row">
	<div class="col-sm-6 col-md-6">
		<a href="/checkout" style="margin: 0 0 0 40px;" type="button" class="buttons">Checkout</a>
	</div>
</div>
{{ else }}
<div class="row">
	<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
		<h2>No items in the Cart</h2>
	</div>
</div>
{{/if}}