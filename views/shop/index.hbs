<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
      {{ successMsg }}
    </div>
  </div>
</div>

{{# each products }} 
  <div class="row">
    {{# each this}}
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail" class="thumbnail"> 
            <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
            <div class="caption" style="padding: 15px;">
              <h4>{{ this.title}}</h4>
              <h5 class="description">{{ this.description }}</h5>
              <div class="clearfix">
                <div class="price pull-left" style="padding: 8px 0; font-size: 20px;">${{ this.price }}</div>
                <a href="/add-to-cart/{{this._id}}" class="btn pull-right button" role="button">Add To Cart</a>
            </div>
          </div>
        </div>
      </div> 
    {{/each}}
  </div>
{{/each}}