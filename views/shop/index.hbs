<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
      {{ successMsg }}
    </div>
  </div>
</div>

{{# each products }} 
  <div class="row">
    {{# each this}}
        <div class="col-sm-6 col-md-4">
          <div class="card">  
            <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
            <div class="card-footer">
                <p>{{this.title}}</p>
                <div class="price-cart">
                    <h5 style="font-weight: bold;">Rs {{this.price}}</h5>
                    <a href="/add-to-cart/{{this._id}}" style="float: right" role="button" class="cart-btn">Add</a>
                </div>
          </div>
        </div>
      </div> 
    {{/each}}
  </div>
{{/each}}