<div class="row box">
	<div class="checkout col-md-12"> 
		<h1><strong>Checkout</strong></h1>
		<h4>Your Total: Rs {{ total }}</h4>
		<div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
			{{errMsg}}
		</div>
		<form action="/checkout" method="post">
			<div class="row">
				<div class="col-xs-12">
					<div class="form-group">
						 <label for="name">Card Holder Name</label>
						 <input maxlength="16" type="text" id="card-holder-name" name="card-holder-name" class="form-control" style="border: 1px solid #ECEFF3;" required>
					</div>
				</div>
				<div class="col-xs-12">
					<div class="form-group">
						 <label for="name">Card Number</label>
						 <input type="text" id="card-number" name="card-number" class="form-control" placeholder="4073 0000 0000 0000" style="border: 1px solid #ECEFF3;" required>
					</div>
				</div>
				<div class="col-xs-12">
					<div class="row">
						<div class="col-xs-7">
							<label for="expire">Expire</label>
							<div class="expiration">
								<div class="form-group">
									<input type="text" maxlength="2" id="card-expiry-month" name="card-expiry-month" class="form-control"  placeholder="06" style="border: 1px solid #ECEFF3; width: 50%;" required>
								</div>
								<div class="form-group">
									<input type="text" id="card-expiry-year" name="card-expiry-year" class="form-control"  placeholder="2025" style="border: 1px solid #ECEFF3;
										width: 50% ;" required>
								</div>
							</div>
						</div>
						<div class="col-xs-5">
							<label for="expire">CVV</label>
							<div class="form-group">
								<input type="text" maxlength="4" id="cvv" name="cvv" class="form-control"  placeholder="000" style="border: 1px solid #ECEFF3; width: 70% !important;" required>
							</div>
						</div>
					</div>
				</div>
			</div>
			<button type="submit" class="buttons" style="margin-bottom: 20px;">Pay</button>
		</form>
	</div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>